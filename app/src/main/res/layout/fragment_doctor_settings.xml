<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey_2"
    tools:context="demo.acube.application.healthcare.activity.doctor.activity.myProfileActivity.DoctorSettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llToolbarLayout">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:titleTextColor="#ffffff"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitXY"

                    android:src="@drawable/ic_keyboard_arrow_left_blue_48dp" />

                <TextView
                    android:id="@+id/toolbar_tv_myprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_back"
                    android:text="@string/my_profile"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textColor="@color/light_blue"

                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/llToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"

            android:padding="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_not_disturb"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/default_text_color_2"
                />
            <Switch
                android:id="@+id/switch_do_not_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:padding="@dimen/_10sdp"
                android:text="@string/do_not_disturb_detail"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/White"
            android:layout_marginTop="@dimen/_5sdp">


            <RelativeLayout
                android:id="@+id/rl_account_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/White"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/account"
                    android:textColor="@color/default_text_color_2"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_account_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/iv_account_more"
                    android:text="UnKnown User"
                    android:textColor="@color/default_text_color"

                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/iv_account_more"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_more_gray" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey_3"
                android:layout_marginStart="@dimen/_10sdp"/>

            <RelativeLayout
                android:id="@+id/rl_terms_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/White"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/default_text_color_2"
                    android:textSize="@dimen/_10sdp" />


                <ImageView
                    android:id="@+id/iv_terms_more"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_more_gray" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey_3"
                android:layout_marginStart="@dimen/_10sdp"/>

            <RelativeLayout
                android:id="@+id/rl_logout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/White"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/logout"
                    android:textColor="@color/default_text_color_2"
                    android:textSize="@dimen/_10sdp" />


                <ImageView
                    android:id="@+id/iv_logout_more"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_more_gray" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
