<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/llSlotItemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background_layout"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_time_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
               android:layout_weight="1"
                android:text="10 30 - 11 00"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/bg_dark_grey" />

            <ImageView
                android:id="@+id/iv_check_mark"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkmark_red"
                android:visibility="gone" />

        </LinearLayout>





</LinearLayout>