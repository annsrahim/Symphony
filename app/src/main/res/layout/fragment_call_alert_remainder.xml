<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    >
        <include
            layout="@layout/toolbar_layout">
        </include>

        <RelativeLayout
            android:id="@+id/rl_alert_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/White"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_toEndOf="@+id/iv_dosage_select"
                    android:text="@string/None"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/iv_alert_none"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_checkmark_red"
                    android:visibility="gone" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/White"
            android:layout_marginTop="@dimen/_20sdp">


                <RelativeLayout
                    android:id="@+id/rl_alert_at_event_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_toEndOf="@+id/iv_dosage_select"
                            android:text="@string/lbl_alert_at_time_event"
                            android:textSize="@dimen/_15sdp" />

                        <ImageView
                            android:id="@+id/iv_alert_at_event_time"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_checkmark_red"
                            android:visibility="gone" />


                </RelativeLayout>

                <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/_25sdp"/>

                <RelativeLayout
                    android:id="@+id/rl_alert_5_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_toEndOf="@+id/iv_dosage_select"
                            android:text="@string/lbl_alert_5_min_before"
                            android:textSize="@dimen/_15sdp" />

                        <ImageView
                            android:id="@+id/iv_alert_5_min_before"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_checkmark_red"
                            android:visibility="gone" />


                </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/_25sdp"/>

                <RelativeLayout
                    android:id="@+id/rl_alert_10_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_toEndOf="@+id/iv_dosage_select"
                            android:text="@string/lbl_alert_10_min_before"
                            android:textSize="@dimen/_15sdp" />

                        <ImageView
                            android:id="@+id/iv_alert_10_min"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_checkmark_red"
                            android:visibility="gone" />


                </RelativeLayout>
        </LinearLayout>

</LinearLayout>