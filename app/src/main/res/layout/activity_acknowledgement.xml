<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context="demo.acube.application.healthcare.activity.registrationUser.AcknowledgementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_white"
        android:orientation="vertical"
        android:id="@+id/llHeader"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/lbl_welcome_symphony"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruth Sathra"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/tvSSSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/lbl_acknowledgement_heading"
            android:textAlignment="center"
            android:textSize="@dimen/_5sdp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:layout_below="@+id/llHeader">
        <TextView
            android:id="@+id/tvEndLicenseAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="End User license agreement" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_grey"
       >

        <Button
            android:id="@+id/btn_iAgree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_marginRight="@dimen/_60sdp"
            android:background="@color/light_blue"
            android:textColor="@color/White"
            android:text="I Agree"/>


    </LinearLayout>


</RelativeLayout>
