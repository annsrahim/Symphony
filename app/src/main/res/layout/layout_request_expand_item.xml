<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_doctor_details_container"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/gpc_placeholder_patient"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/list_child_doctor_icon"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:id="@+id/llDoctorDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toEndOf="@+id/list_child_doctor_icon"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_child_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_patient"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/list_child_doctor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_type"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_s_note"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/list_child_request_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:text="Note Missing"
                android:textSize="@dimen/_8sdp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp">
            <TextView
                android:id="@+id/list_tv_child_reject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reject"
                android:background="@color/call_reject_red"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/list_tv_child_approve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/approve"
                android:background="@color/call_accept_green"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey_3"
            />


    </LinearLayout>

</LinearLayout>